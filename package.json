{
  "name": "tifoo",
  "displayName": "Tifoo – Effortless Tailwind Styling",
  "version": "0.0.7",
  "description": "Streamline your Tailwind CSS development with real-time inspection and intuitive class management—right in your browser.",
  "author": "syncinsect<syncinsect@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "prepare": "husky install",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.10",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/chrome": "0.0.258",
    "@types/jest": "^29.5.14",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.20",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "postcss-prefix-selector": "^2.1.0",
    "prettier": "3.2.4",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "*.css"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
